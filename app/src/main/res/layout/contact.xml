<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_page_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="للتواصل معنا"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/noto_kufi_arabic_bold"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:layout_marginTop="25px"
        android:layout_marginBottom="25px"
        android:layoutDirection="rtl"
        android:background="@drawable/container"
        android:paddingTop="30px"
        android:paddingBottom="30px"
        android:paddingRight="40px">


        <ImageView
            android:id="@+id/phone"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_phone_24px_black"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10px"/>

        <TextView
            android:id="@+id/phone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08-2866003"
            android:layout_marginLeft="15px"
            android:textSize="17dp"
            android:textColor="#50abe2"
            android:textStyle="italic"
            android:layout_gravity="right"
            android:layout_toLeftOf="@+id/phone"/>

        <TextView
            android:id="@+id/phone2"
            android:layout_below="@+id/phone1"
            android:layout_toLeftOf="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="059-9855558"
            android:layout_marginLeft="15px"
            android:textColor="#50abe2"
            android:textStyle="italic"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:textSize="17dp"/>

        <ImageView
            android:id="@+id/location"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_location_on_24px"
            android:layout_below="@+id/phone2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10px"/>

        <TextView
            android:id="@+id/location1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الرمال شارع عمر المختار"
            android:layout_marginLeft="15px"
            android:textColor="#555"
            android:textStyle="italic"
            android:layout_gravity="right"
            android:layout_below="@+id/phone2"
            android:layout_toLeftOf="@+id/location"
            android:textSize="@dimen/textSize"
            android:fontFamily="@font/noto_kufi_arabic_regular"/>

        <TextView
            android:id="@+id/location2"
            android:layout_below="@+id/location1"
            android:layout_toLeftOf="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مفترق السرايا مقابل عمارة البرعصي"
            android:layout_marginLeft="15px"
            android:paddingBottom="5px"
            android:textColor="#555"
            android:textStyle="italic"
            android:layout_gravity="right"
            android:textSize="@dimen/textSize"
            android:fontFamily="@font/noto_kufi_arabic_regular"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:id="@+id/cloud"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_cloud_24px"
            android:layout_below="@+id/location2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10px"/>

        <TextView
            android:id="@+id/cloud1"
            android:layout_below="@+id/location2"
            android:layout_toLeftOf="@+id/cloud"
            android:layout_width="wrap_content"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            android:text="www.albarasi.ps"
            android:layout_marginLeft="15px"
            android:textColor="#50abe2"
            android:textStyle="italic"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/cloud2"
            android:layout_below="@+id/cloud1"
            android:layout_toLeftOf="@+id/cloud"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="info@albarasi.ps"
            android:layout_marginLeft="15px"
            android:textColor="#50abe2"
            android:textStyle="italic"
            android:layout_gravity="right"
            android:textSize="17dp" />



    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by ExTra FX"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15px"
        android:layout_marginBottom="5px"
        android:textColor="#555"
        android:textStyle="italic"/>
</RelativeLayout>
